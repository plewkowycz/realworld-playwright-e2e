{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "playwright"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:playwright/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "tests/**/*.ts",
        "**/*.spec.ts"
      ],
      "env": {
        "playwright/playwright-test": true
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "test-results/",
    "playwright-report/",
    "playwright/.cache/"
  ],
  "rules": {
    "playwright/no-focused-tests": "warn",
    "@typescript-eslint/no-explicit-any": "off"
  }
}


