{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@_config/*": ["config/*"],
      "@_pw-config": ["playwright.config.ts"],
      "@_src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "config/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
